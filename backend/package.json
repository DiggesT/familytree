{
  "name": "@familytree/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "test": "jest --runInBand",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org family-tree-l5 --project backend --auth-token ${SENTRY_AUTH_TOKEN}'",
    "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org family-tree-l5 --project backend'",
    "pmd": "prisma migrate dev",
    "pmt": "dotenv -e ./.env.test prisma migrate deploy",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --log-level warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@familytree/shared": "workspace:*",
    "@familytree/webapp": "workspace:*",
    "@prisma/client": "^6.2.1",
    "@sentry/node": "^9.1.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.7.9",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "react-router-dom": "^7.1.1",
    "serialize-error": "8.1.0",
    "superjson": "1.x",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@sentry/cli": "^2.42.1",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.5",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "dotenv-cli": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^6.2.1"
  }
}
